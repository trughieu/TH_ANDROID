<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="240dp"
    android:padding="2dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/shadow"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/rl_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/imgDes_top_restaurant"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_highland" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvDes_top_Restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_img"
        android:layout_alignStart="@+id/rl_img"
        android:layout_alignEnd="@+id/rl_img"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="9dp"
        android:text="Higland Coffee"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDes_top_Restaurant"
        android:layout_alignStart="@+id/tvDes_top_Restaurant"
        android:layout_alignEnd="@+id/tvDes_top_Restaurant"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRate_top_Restaurant"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="-10dp"
            android:text="Rate: 2"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_star_rate_24" />
    </LinearLayout>
</RelativeLayout>

