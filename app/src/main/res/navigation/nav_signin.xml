<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_signin"
    app:startDestination="@id/fullnameFragment">
    <fragment
        android:id="@+id/fullnameFragment"
        android:name="com.example.nguyendangquang_19dh110604.FullnameFragment"
        android:label="Fullname"
        tools:layout="@layout/fragment_fullname">
        <action
            android:id="@+id/action_fullnameFragment_to_addressFragment"
            app:destination="@id/addressFragment" />
    </fragment>
    <fragment
        android:id="@+id/addressFragment"
        android:name="com.example.nguyendangquang_19dh110604.AddressFragment"
        android:label="Address"
        tools:layout="@layout/fragment_address">
        <action
            android:id="@+id/action_addressFragment_to_userpasswordFragment"
            app:destination="@id/userpasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/userpasswordFragment"
        android:name="com.example.nguyendangquang_19dh110604.UserpasswordFragment"
        android:label="Userpassword"
        tools:layout="@layout/fragment_userpassword" />

</navigation>